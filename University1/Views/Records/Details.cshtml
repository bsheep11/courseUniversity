@model University1.Record

@{
    ViewBag.Title = "Подробнее";
}

<h2>Подробнее</h2>

<div>
    <h4>Запись</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Имя студента
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student.Name)
        </dd>

        <dt>
            Название курса
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Сourse.Name)
        </dd>

    </dl>
</div>
@if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Вернуться к списку", "Index")
    </p>
}
else
{
<p>
    @Html.ActionLink("Тесты", "Index", "CourseTest", new { id = Model.CourseID }, null) |
    @Html.ActionLink("Вернуться к списку", "Index", new { id = Model.StudentID, isStudent = true }, null)
</p>
}
}

@model University1.TestQuestions

@{
    ViewBag.Title = "Удаление";
}

<h2>Удаление</h2>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>TestQuestions</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Вопрос
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Question)
        </dd>

        <dt>
            Правильный ответ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrueAns)
        </dd>

        <dt>
            Второй ответ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ans2)
        </dd>

        <dt>
            Третий ответ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ans3)
        </dd>

        <dt>
            Четвертый ответ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ans4)
        </dd>

        <dt>
            Название теста
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Test.TestName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку", "Index", new { id = Model.TestID })
        </div>
    }
</div>

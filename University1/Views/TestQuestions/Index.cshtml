@model IEnumerable<University1.TestQuestions>

@{
    ViewBag.Title = "Вопросы теста";
}

    <h2>Вопросы теста "@ViewBag.testName"</h2>

<p>
    @Html.ActionLink("Создать новый", "Create", new { id=ViewBag.testID }, null)
</p>
<table class="table">
    <tr>
        <th>
            Вопрос
        </th>
        <th>
            Правильный ответ
        </th>
        <th>
            Второй ответ
        </th>
        <th>
            Третий ответ
        </th>
        <th>
            Четвертый ответ
        </th>
        <th>
            Название теста
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrueAns)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ans2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ans3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ans4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Test.TestName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
